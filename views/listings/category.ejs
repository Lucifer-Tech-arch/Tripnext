<% layout("/layouts/boilerplate.ejs") %>

<h2 class="mb-3 mt-4 text-center">Listings for <%= category %></h2>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-2">
<% if(catlistings.length === 0) { %>
       <h3 class="text-center text-danger mt-4">Listings not available!</h3>
<% } else { %>
  <% for(listing of catlistings) { %>
    <a href="/listings/<%=listing._id%>" class="card-link">
      <div class="card col listing-card">
        <img src="<%=listing.image.url%>" class="card-img-top" alt="Listing Image">
        <div class="card-body">
          <p class="card-text">
            <b>
              <%= listing.title%>
              </b>
          </p>
        </div>
      </div>
    </a>
  <% } %>
<%} %>
</div>
