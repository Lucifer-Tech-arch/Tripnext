<% layout("/layouts/boilerplate.ejs") %>

  <div class="filters">
    <div class="filter">
      <a href="">
        <div class="icon"><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </a>
    </div>
    <div class="filter">
      <a href="/listings/category/rooms">
        <div class="icon"><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </a>
    </div>
    <div class="filter">
      <a href="/listings/category/mountains">
        <div class="icon"><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </a>
    </div>
    <div class="filter">
      <a href="/listings/category/castles">
        <div class="icon"><i class="fa-solid fa-chess-rook"></i></div>
        <p>Castles</p>
      </a>
    </div>
    <div class="filter">
      <a href="/listings/category/iconic_cities">
        <div class="icon"><i class="fa-solid fa-city"></i></div>
        <p>Iconic cities</p>
      </a>
    </div>
    <div class="filter">
      <a href="/listings/category/farms">
        <div class="icon"><i class="fa-solid fa-tractor"></i></div>
        <p>Farms</p>
      </a>
    </div>
    <div class="filter">
      <a href="/listings/category/amazing_pools">
        <div class="icon"><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
      </a>
    </div>
    <div class="filter">
      <a href="/listings/category/arctic">
        <div class="icon"><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
      </a>
    </div>
    <div class="filter">
      <a href="/listings/category/beaches">
        <div class="icon"><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beaches</p>
      </a>
    </div>
    <div class="filter">
      <a href="/listings/category/religious_places">
        <div class="icon"><i class="fa-solid fa-gopuram"></i></div>
        <p>Religious Places</p>
      </a>
    </div>
    <div class="filter">
      <a href="/listings/category/hills">
        <div class="icon"><i class="fa-solid fa-hill-rockslide"></i></div>
        <p>Hills</p>
      </a>
    </div>
    <div class="filter">
      <a href="listings/category/igloos">
        <div class="icon"><i class="fa-solid fa-igloo"></i></i></div>
        <p>Igloos</p>
      </a>
    </div>
    <div class="check">
      <div class="form-check form-switch form-check-reverse">
        <input class="form-check-input" type="checkbox" id="switchCheckReverse">
        <label class="form-check-label" for="switchCheckReverse">Display Taxes</label>
      </div>
    </div>
  </div>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-2">
    <% if(alllistings.length===0) { %>
      <h3 class="text-center text-danger mt-4">No Such Listing Found!</h3>
      <% } else { %>
        <% for(listing of alllistings) { %>
          <a href="/listings/<%=listing._id%>" class="card-link">
            <div class="card col listing-card">
              <img src="<%=listing.image.url%>" class="card-img-top" alt="Listing Image">
              <div class="card-body">
                <p class="card-text">
                  <b>
                    <%= listing.title%>
                  </b><br>
                  &#8377; <%=listing.price.toLocaleString("en-IN")%>
                    <small class="tax-info"><i>&nbsp; &nbsp; &nbsp; +18% GST</i></small>
                </p>
              </div>
            </div>
          </a>
          <% } %>
            <%} %>
  </div>